<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Entrance -->

  <LayoutRoomDef>
    <defName>NAT_CollectorLairEntrance</defName>
    <roomContentsWorkerType>NAT.RoomContents_CollectorLairEntrance</roomContentsWorkerType>
    <minSingleRectWidth>9</minSingleRectWidth>
    <minSingleRectHeight>9</minSingleRectHeight>
    <requiresSingleRectRoom>true</requiresSingleRectRoom>
    <canMergeWithAdjacentRoom>false</canMergeWithAdjacentRoom>
    <floorTypes>
      <li>PavedTile</li>
    </floorTypes>
    <edgeTerrain>AncientTile</edgeTerrain> 
    <prefabs>
      <AncientDisplayBank_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientDisplayBank_Edge>
      <AncientStorageCylinder_Edge>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~3</minMaxRange>
      </AncientStorageCylinder_Edge>
      <AncientLockerBank_Row>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientLockerBank_Row>
      <AncientLamp_Single>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <scatterTerrain>
      <Soil>
        <groupsPerHundredCells>2~6</groupsPerHundredCells>
        <itemsPerGroup>4~6</itemsPerGroup>
        <groupDistRange>2~3</groupDistRange>
      </Soil>
    </scatterTerrain>
  </LayoutRoomDef>

  <!-- Common -->

  <LayoutRoomDef>
    <defName>NAT_CollectionRoom</defName>
    <canMergeWithAdjacentRoom>false</canMergeWithAdjacentRoom>
    <roomContentsWorkerType>NAT.RoomContents_CollectorLairRoom</roomContentsWorkerType>
    <requiresSingleRectRoom>true</requiresSingleRectRoom>
    <minSingleRectWidth>3</minSingleRectWidth>
    <minSingleRectHeight>3</minSingleRectHeight>
    <floorTypes>
      <li>AncientConcrete</li>
      <li>AncientTile</li>
      <li>TileGranite</li>
    </floorTypes>
    <prefabs>
      <NAT_CollectionCase>
        <countPerTenEdgeCells>10</countPerTenEdgeCells>
        <minMaxRange>1~10</minMaxRange>
      </NAT_CollectionCase>
      <AncientStorageCylinder_Edge>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientStorageCylinder_Edge>
      <AncientLockerBank_Row>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientLockerBank_Row>
      <AncientLamp_Single>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <scatterTerrain>
      <Soil>
        <groupsPerHundredCells>3~6</groupsPerHundredCells>
        <itemsPerGroup>4~8</itemsPerGroup>
        <groupDistRange>2~3</groupDistRange>
      </Soil>
    </scatterTerrain>
  </LayoutRoomDef>

  <LayoutRoomDef>
    <defName>NAT_AncientStorageRoom</defName>
    <canMergeWithAdjacentRoom>false</canMergeWithAdjacentRoom>
    <roomContentsWorkerType>NAT.RoomContents_CollectorLairStorage</roomContentsWorkerType>
    <requiresSingleRectRoom>true</requiresSingleRectRoom>
    <minSingleRectWidth>5</minSingleRectWidth>
    <minSingleRectHeight>5</minSingleRectHeight>
    <floorTypes>
      <li>AncientConcrete</li>
      <li>AncientTile</li>
      <li>TileGranite</li>
    </floorTypes>
    <prefabs>
      <Shelves_Rows>
        <countPerTenEdgeCells>30</countPerTenEdgeCells>
        <minMaxRange>1</minMaxRange>
      </Shelves_Rows>
      <AncientStorageCylinder_Edge>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientStorageCylinder_Edge>
      <AncientLockerBank_Row>
        <countPerHundredCells>1</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientLockerBank_Row>
      <AncientLamp_Single>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <scatterTerrain>
      <Soil>
        <groupsPerHundredCells>3~6</groupsPerHundredCells>
        <itemsPerGroup>4~8</itemsPerGroup>
        <groupDistRange>2~3</groupDistRange>
      </Soil>
    </scatterTerrain>
  </LayoutRoomDef>

  <LayoutRoomDef>
    <defName>NAT_CollectorBedroom</defName>
    <roomContentsWorkerType>NAT.RoomContents_CollectorLairBedroom</roomContentsWorkerType>
    <canMergeWithAdjacentRoom>false</canMergeWithAdjacentRoom>
    <requiresSingleRectRoom>true</requiresSingleRectRoom>
    <minSingleRectWidth>9</minSingleRectWidth>
    <minSingleRectHeight>9</minSingleRectHeight>
    <spawnJunk>false</spawnJunk>
    <floorTypes>
      <li>CarpetMagenta</li>
      <li>CarpetMossBright</li>
      <li>CarpetBlue</li>
    </floorTypes>
    <prefabs>
      <AncientLamp_Single>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <scatterTerrain>
      <Soil>
        <groupsPerHundredCells>3~6</groupsPerHundredCells>
        <itemsPerGroup>4~8</itemsPerGroup>
        <groupDistRange>2~3</groupDistRange>
      </Soil>
    </scatterTerrain>
  </LayoutRoomDef>
  
</Defs>