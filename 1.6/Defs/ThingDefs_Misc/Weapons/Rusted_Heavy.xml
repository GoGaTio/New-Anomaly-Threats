<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="NAT_BaseHeavyRustedWeapon">
    <defName>NAT_Gun_RustedMachineGun</defName>
	<label>rusted machine gun</label>
    <description>A piece of bioferrite shaped like a machine gun.\n\nSomehow can shoot if wielded by rusted creature.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapon/NAT_RustedMachineGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2</drawSize>
    </graphicData>
    <statBases>
      <Mass>8.5</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
      <MarketValue>600</MarketValue>
    </statBases>
    <weaponTags>
      <li>NAT_RustedMachineGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>NAT_Bullet_RustedSmallStop</defaultProjectile>
        <warmupTime>2.3</warmupTime>
        <range>34.9</range>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <burstShotCount>10</burstShotCount>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <butcherProducts>
      <Bioferrite>24</Bioferrite>
    </butcherProducts>
  </ThingDef>

