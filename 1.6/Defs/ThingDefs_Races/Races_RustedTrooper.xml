<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="NAT_BaseRustedPawn">
    <defName>NAT_RustedTrooper</defName>
    <label>rusted stormtrooper</label>
    <description>Bioferrite pieces shaped like human figure. Rusted stormtroopers have bioferrite shield that protects them from incoming damage.</description>
    <statBases>
      <MinimumContainmentStrength>60</MinimumContainmentStrength>
      <MarketValue>900</MarketValue>
    </statBases>
    <race>
      <body>NAT_Rust</body>
      <baseHealthScale>0.35</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>EntityFullyFormed</def>
          <soundCall>NAT_Pawn_RustedSoldier_Call</soundCall>
          <soundWounded>NAT_Pawn_RustedSoldier_Wounded</soundWounded>
          <soundDeath>NAT_Pawn_RustedSoldier_Death</soundDeath>
        </li>
      </lifeStageAges>
    </race>
    <uiIconPath>Things/Pawn/NAT_RustedTrooper_Icon</uiIconPath>
    <uiIconScale>1</uiIconScale>
    <comps>
      <li Class="CompProperties_HoldingPlatformTarget">
        <baseEscapeIntervalMtbDays>60</baseEscapeIntervalMtbDays>
      </li>
	  <li Class="CompProperties_EffecterOnDeath">
        <effecterDef>NAT_RustedSoldierDeath</effecterDef>
      </li>
      <li Class="CompProperties_AttachPoints">
        <points>
          <li>
            <offset>(-.37, 0, .2)</offset>
            <type>PlatformRestraint0</type>
          </li>
          <li>
            <offset>(.42, 0, .21)</offset>
            <type>PlatformRestraint1</type>
          </li>
          <li>
            <offset>(.25, 0, -.51)</offset>
            <type>PlatformRestraint2</type>
          </li>
          <li>
            <offset>(-.15, 0, -.41)</offset>
            <type>PlatformRestraint3</type>
          </li>
        </points>
      </li>
      <li Class="CompProperties_ProducesBioferrite">
        <bioferriteDensity>2</bioferriteDensity>
      </li>
      <li Class="CompProperties_Studiable">
        <frequencyTicks>120000</frequencyTicks>
        <knowledgeCategory>Advanced</knowledgeCategory>
        <anomalyKnowledge>1</anomalyKnowledge>
        <minMonolithLevelForStudy>1</minMonolithLevelForStudy>
        <requiresHoldingPlatform>true</requiresHoldingPlatform>
      </li>
      <li Class="NAT.CompProperties_RustedShield">
        <maxHealth>80</maxHealth>
        <regenInterval>300</regenInterval>
        <ticksToRestore>50000</ticksToRestore> <!--5/6 day-->
        <destroyedEffect>NAT_RustedSoldierDeath</destroyedEffect>
        <renderProps>
          <debugLabel>Rusted shield</debugLabel>
          <parentTagDef>Body</parentTagDef>
			  <baseLayer>35</baseLayer>
			  <pawnType>Any</pawnType>
          <texPaths>
            <li>Things/Pawn/Armor/NAT_RustedArmor_A</li>
			<li>Things/Pawn/Armor/NAT_RustedArmor_B</li>
          </texPaths>
          <texSeed>1</texSeed>
		  <overrideMeshSize>(2, 2)</overrideMeshSize>
      </renderProps>
      <statFactors>
        <MoveSpeed>0.8</MoveSpeed>
        <RangedCooldownFactor>1.1</RangedCooldownFactor>
        <StaggerDurationFactor>0</StaggerDurationFactor>
        <AimingDelayFactor>1.15</AimingDelayFactor>
     </statFactors>
		<statFactorsInactive>
	      <MoveSpeed>1.1</MoveSpeed>
	      <RangedCooldownFactor>0.9</RangedCooldownFactor>
	      <StaggerDurationFactor>1.5</StaggerDurationFactor>
	      <AimingDelayFactor>0.75</AimingDelayFactor>
        <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
		<MeleeCooldownFactor>0.7</MeleeCooldownFactor>
	    </statFactorsInactive>
      </li>
      <li Class="NAT.CompProperties_RustedSoldier">
		<interaction>NAT_RustedChat</interaction>
		<canInteract>true</canInteract>
		<hasHead>true</hasHead>
		<drawData>
            <dataNorth><offset>(0, 0, 0.15)</offset></dataNorth>
            <dataEast><offset>(0.05, 0, 0.15)</offset></dataEast>
            <dataSouth><offset>(0, 0, 0.15)</offset></dataSouth>
            <dataWest><offset>(-0.05, 0, 0.15)</offset></dataWest>
		</drawData>
		<headTags>
		  <li>Trooper</li>
		</headTags>
    <apparelTagsToAllow>
		  <li>NAT_Rust_Belt</li>
		</apparelTagsToAllow>
     <skyfaller>NAT_RustedTrooperIncoming</skyfaller>
	  </li>
      <li Class="NAT.CompProperties_RustedWorker">
        <skills>
          <Shooting>8</Shooting>
          <Melee>8</Melee>
          <Plants>4</Plants>
          <Crafting>4</Crafting>
          <Medicine>4</Medicine>
          <Intellectual>4</Intellectual>
        </skills>
        <canWork>true</canWork>
        <workTags>
          <li>Firefighting</li>
          <li>Hunting</li>
          <li>Hauling</li>
          <li>Cleaning</li>
        </workTags>
        <forceAllowWorkGivers>
          <li>Strip</li>
        </forceAllowWorkGivers>
        <forceAllowWorkTypes>
          <li>PlantCutting</li>
          <li>BasicWorker</li>
        </forceAllowWorkTypes>
      </li>
    </comps>
    <killedLeavingsRanges>
      <Bioferrite>2~5</Bioferrite>
    </killedLeavingsRanges>
  </ThingDef>

  <PawnKindDef Name="NAT_RustedTrooperKindBase" ParentName="NAT_RustKindBase">
    <defName>NAT_RustedTrooper</defName>
    <label>rusted trooper</label>
    <startingHediffs>
      <li>
        <def>NAT_RustedRegeneration</def>
        <severity>0.1</severity>
      </li>
    </startingHediffs>
    <race>NAT_RustedTrooper</race>
    <weaponTags>
      <li>NAT_RustedShotgun</li>
      <li>NAT_RustedSMG</li>
    </weaponTags>
    <modExtensions>
      <li Class="NAT.RustedPawnExtention">
        <scenarioAvailable>true</scenarioAvailable>
      </li>
    </modExtensions>
    <alternateGraphicChance>0.5</alternateGraphicChance>
    <alternateGraphics>
      <li>
        <texPath>Things/Pawn/Bodies/NAT_Trooper_A</texPath>
        <attachPoints>
          <li>
            <offset>(-.47, 0, .25)</offset>
            <type>PlatformRestraint0</type>
          </li>
          <li>
            <offset>(.25, 0, .15)</offset>
            <type>PlatformRestraint1</type>
          </li>
          <li>
            <offset>(.1, 0, -.5)</offset>
            <type>PlatformRestraint2</type>
          </li>
          <li>
            <offset>(-.17, 0, -.52)</offset>
            <type>PlatformRestraint3</type>
          </li>
        </attachPoints>
      </li>
    </alternateGraphics>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Bodies/NAT_Trooper_A</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <combatPower>190</combatPower>
    <weaponMoney>9999~9999</weaponMoney>
    <combatEnhancingDrugsCount>-7~2</combatEnhancingDrugsCount>
  </PawnKindDef>

</Defs>