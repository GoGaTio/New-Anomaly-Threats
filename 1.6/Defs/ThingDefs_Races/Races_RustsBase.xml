<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="NAT_BaseRustedPawn" ParentName="BasePawn" Abstract="True">
    <thingClass>NAT.RustedPawn</thingClass>
    <hiddenWhileUndiscovered>true</hiddenWhileUndiscovered>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MoveSpeed>4.0</MoveSpeed>
      <ArmorRating_Blunt>0.65</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <Flammability>1.5</Flammability>
      <ComfyTemperatureMin>-170</ComfyTemperatureMin>
      <ComfyTemperatureMax>540</ComfyTemperatureMax>
      <PsychicSensitivity>1.5</PsychicSensitivity>
      <MarketValue>1000</MarketValue>
      <ToxicResistance>1</ToxicResistance>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
      <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
      <WorkSpeedGlobal>0.7</WorkSpeedGlobal>
      <FoodPoisonChance>5</FoodPoisonChance>
      <MeatAmount>0</MeatAmount>
      <NAT_CoreDropChance>0.05</NAT_CoreDropChance>
    </statBases>
    <tradeability>None</tradeability>
    <hasTooltip>true</hasTooltip>
    <hideStats>true</hideStats>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <race>
      <thinkTreeMain>NAT_Rust</thinkTreeMain>
      <thinkTreeConstant>NAT_RustConstant</thinkTreeConstant>
      <nameGenerator>NAT_NamerRustedSoldier</nameGenerator>
      <renderTree>NAT_RustedPawn</renderTree>
      <baseBodySize>1</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <intelligence>ToolUser</intelligence>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <hasMeat>false</hasMeat>
      <fleshType>EntityMechanical</fleshType>
      <foodType>None</foodType>
      <hasCorpse>false</hasCorpse>
      <lifeExpectancy>2500</lifeExpectancy>
      <soundMeleeDodge>Pawn_MeleeDodge</soundMeleeDodge>
      <soundCallIntervalRange>2000~5000</soundCallIntervalRange>
      <disableIgniteVerb>true</disableIgniteVerb>
      <trainability>None</trainability>
      <hideTrainingTab>true</hideTrainingTab>
      <bloodDef>NAT_Filth_RustedDebris</bloodDef>
      <hediffGiverSets>
        <li>AnomalyEntity</li>
      </hediffGiverSets>
    </race>
    <comps>
      <li Class="CompProperties_CanBeDormant">
        <maxDistAwakenByOther>5</maxDistAwakenByOther>
        <wakeUpDelayRange>100~200</wakeUpDelayRange>
        <jobDormancy>true</jobDormancy>
        <dormantStateLabelKey>NAT_RustDormant</dormantStateLabelKey>
        <dontShowDevGizmos>false</dontShowDevGizmos>
      </li>
      <li Class="CompProperties_WakeUpDormant">
        <wakeUpOnDamage>true</wakeUpOnDamage>
        <wakeUpCheckRadius>4.9</wakeUpCheckRadius>
        <wakeUpIfAnyTargetClose>true</wakeUpIfAnyTargetClose>
        <wakeUpWithDelay>true</wakeUpWithDelay>
        <wakeUpOnThingConstructedRadius>4.9</wakeUpOnThingConstructedRadius>
        <wakeUpSound>NAT_Pawn_RustedSoldier_Call</wakeUpSound>
        <wakeUpTargetingParams>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>true</canTargetMechs>
          <canTargetHumans>true</canTargetHumans>
        </wakeUpTargetingParams>
      </li>
    </comps>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>left claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>EMP</damageDef>
        <multiplier>0.4</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

  <PawnKindDef Name="NAT_RustKindBase" Abstract="True">
    <defaultFactionType>Entities</defaultFactionType>
    <overrideDeathOnDownedChance>0.5</overrideDeathOnDownedChance>
    <immuneToGameConditionEffects>true</immuneToGameConditionEffects>
    <preventIdeo>true</preventIdeo>
    <aiAvoidCover>true</aiAvoidCover>
    <canStrip>true</canStrip>
    <allowOldAgeInjuries>false</allowOldAgeInjuries>
    <minGenerationAge>100</minGenerationAge>
    <overrideDebugActionCategory>Rusts</overrideDebugActionCategory>
    <weaponTags></weaponTags>
  </PawnKindDef>

</Defs>