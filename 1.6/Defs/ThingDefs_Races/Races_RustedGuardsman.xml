<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="NAT_BaseRustedPawn">
    <defName>NAT_RustedGuardsman</defName>
    <label>rusted guardsman</label>
    <description>Bioferrite pieces shaped like tall human figure. This type of rusted soldier have bioferrite shield that should be destroyed to harm trooper.</description>
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <MarketValue>2100</MarketValue>
      <ArmorRating_Blunt>0.9</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <MinimumContainmentStrength>110</MinimumContainmentStrength>
      <StaggerDurationFactor>0</StaggerDurationFactor>
    </statBases>
    <race>
      <body>NAT_RustTall</body>
      <baseHealthScale>3</baseHealthScale>
      <baseBodySize>1.4</baseBodySize>
      <lifeStageAges>
        <li>
          <def>EntityFullyFormed</def>
          <soundCall>NAT_Pawn_RustedOfficer_Call</soundCall>
          <soundWounded>NAT_Pawn_RustedOfficer_Wounded</soundWounded>
          <soundDeath>NAT_Pawn_RustedOfficer_Death</soundDeath>
        </li>
      </lifeStageAges>
    </race>
    <uiIconPath>Things/Pawn/NAT_RustedGuardsman_Icon</uiIconPath>
    <uiIconScale>1</uiIconScale>
    <comps>
      <li Class="CompProperties_HoldingPlatformTarget">
        <baseEscapeIntervalMtbDays>60</baseEscapeIntervalMtbDays>
      </li>
      <li Class="CompProperties_EffecterOnDeath">
        <effecterDef>NAT_RustedOfficerDeath</effecterDef>
      </li>
      <li Class="CompProperties_AttachPoints">
        <points>
          <li>
            <offset>(-.7, 0, .4)</offset>
            <type>PlatformRestraint0</type>
          </li>
          <li>
            <offset>(.7, 0, .4)</offset>
            <type>PlatformRestraint1</type>
          </li>
          <li>
            <offset>(.25, 0, -.51)</offset>
            <type>PlatformRestraint2</type>
          </li>
          <li>
            <offset>(-.15, 0, -.51)</offset>
            <type>PlatformRestraint3</type>
          </li>
        </points>
      </li>
      <li Class="CompProperties_ProducesBioferrite">
        <bioferriteDensity>2.5</bioferriteDensity>
      </li>
      <li Class="CompProperties_Studiable">
        <frequencyTicks>120000</frequencyTicks>
        <knowledgeCategory>Advanced</knowledgeCategory>
        <anomalyKnowledge>2</anomalyKnowledge>
        <minMonolithLevelForStudy>1</minMonolithLevelForStudy>
        <requiresHoldingPlatform>true</requiresHoldingPlatform>
      </li>
      <li Class="NAT.CompProperties_RustedSoldier">
        <bodyType>Hulk</bodyType>
        <interaction>NAT_RustedChat</interaction>
        <canInteract>true</canInteract>
        <hasHead>true</hasHead>
        <drawData>
          <dataNorth><offset>(0, 0, 0.65)</offset></dataNorth>
          <dataEast><offset>(0.1, 0, 0.65)</offset></dataEast>
          <dataSouth><offset>(0, 0, 0.65)</offset></dataSouth>
          <dataWest><offset>(-0.1, 0, 0.65)</offset></dataWest>
        </drawData>
        <headTags>
          <li>Guardsman</li>
        </headTags>
        <apparelTagsToAllow>
          <li>NAT_Rust_Belt</li>
        </apparelTagsToAllow>
	  </li>
      <li Class="NAT.CompProperties_RustedWorker">
        <skills>
          <Shooting>14</Shooting>
          <Melee>12</Melee>
          <Construction>6</Construction>
          <Cooking>5</Cooking>
          <Mining>4</Mining>
          <Plants>4</Plants>
          <Crafting>8</Crafting>
          <Medicine>6</Medicine>
          <Intellectual>8</Intellectual>
        </skills>
        <canWork>true</canWork>
        <workTags>
          <li>Firefighting</li>
          <li>Hunting</li>
          <li>Constructing</li>
          <li>Cooking</li>
          <li>Mining</li>
          <li>Crafting</li>
          <li>Hauling</li>
          <li>Cleaning</li>
        </workTags>
        <forceAllowWorkGivers>
          <li>Strip</li>
        </forceAllowWorkGivers>
        <forceAllowWorkTypes>
          <li>BasicWorker</li>
          <li>PlantCutting</li>
        </forceAllowWorkTypes>
      </li>
    </comps>
    <tools Inherit="False"> 
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
	  <li>
        <label>left claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <killedLeavingsRanges>
      <Bioferrite>4~10</Bioferrite>
    </killedLeavingsRanges>
  </ThingDef>

  <PawnKindDef Name="NAT_RustedGuardsmanKindBase" ParentName="NAT_RustKindBase">
    <defName>NAT_RustedGuardsman</defName>
    <label>rusted guardsman</label>
    <startingHediffs>
      <li>
        <def>NAT_RustedRegeneration</def>
        <severity>0.8</severity>
      </li>
    </startingHediffs>
    <race>NAT_RustedGuardsman</race>
    <weaponTags>
      <li>NAT_RustedMachineGun</li>
      <li>NAT_RustedSniperRifle</li>
      <li>NAT_RustedAssaultShotgun</li>
    </weaponTags>
    <skipResistant>true</skipResistant>
    <aiAvoidCover>true</aiAvoidCover>
    <isBoss>true</isBoss>
    <modExtensions>
      <li Class="NAT.RustedPawnExtention">
        <scenarioAvailable>true</scenarioAvailable>
      </li>
    </modExtensions>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Bodies/NAT_Guardsman_A</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <combatPower>400</combatPower>
    <weaponMoney>9999~9999</weaponMoney>
    <combatEnhancingDrugsCount>-4~2</combatEnhancingDrugsCount>
  </PawnKindDef>

</Defs>