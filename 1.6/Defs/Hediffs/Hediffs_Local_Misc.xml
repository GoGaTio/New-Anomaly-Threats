<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <HediffDef>
    <defName>NAT_ActivatedSpeed</defName>
    <label>activated speed</label>
    <hediffClass>HediffWithComps</hediffClass>
    <description>This rust moving speed is amplified by rusted activator.</description>
    <isBad>false</isBad>
    <defaultLabelColor>(0, 0.3, 0.99)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_DisappearsDisableable">
        <disappearsAfterTicks>300000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
    <stages>
      <li>
        <statOffsets>
          <MoveSpeed>0.4</MoveSpeed>
          <MeleeDodgeChance>10</MeleeDodgeChance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.25</postFactor>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

