<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <HediffDef>
    <defName>NAT_Subdued</defName>
    <description>This person is subdued by distant archotech structure.</description>
    <label>subdued</label>
    <hediffClass>NAT.Hediff_Subdued</hediffClass>
    <stages>
      <li>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7500~10000</disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>NAT_EmotionSuppression</defName>
    <label>emotions suppression</label>
    <hediffClass>HediffWithComps</hediffClass>
    <description>This person's neural patterns are being moderated by distant archotech structure. They're unaffected by the highs and lows of human emotion. They will never have a mental break but they will also never feel inspired.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_DisappearsDisableable">
        <disappearsAfterTicks>180000</disappearsAfterTicks> <!-- 3 days -->
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
    <stages>
      <li>
        <blocksMentalBreaks>true</blocksMentalBreaks>
        <blocksInspirations>true</blocksInspirations>
        <pctAllThoughtNullification>1</pctAllThoughtNullification>
        <overrideMoodBase>0.9</overrideMoodBase>
        <statFactors>
          <PsychicSensitivity>0.7</PsychicSensitivity>
        </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_BannerBoost</defName>
    <label>combat boost</label>
    <hediffClass>HediffWithComps</hediffClass>
    <description>This rust is affected by battke cry and fights better.</description>
    <isBad>false</isBad>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>10</maxSeverity>
    <comps>
      <li Class="NAT.HediffCompProperties_BannerBoost">
        <ticksToDecreaseLevel>5000</ticksToDecreaseLevel>
      </li>
    </comps>
    <stages>
      <li>
        <multiplyStatChangesBySeverity>true</multiplyStatChangesBySeverity>
        <statFactors>
          <MoveSpeed>1.05</MoveSpeed>
          <MeleeCooldownFactor>0.95</MeleeCooldownFactor>
          <MeleeHitChance>1.05</MeleeHitChance>
          <RangedCooldownFactor>0.95</RangedCooldownFactor>
          <ShootingAccuracyPawn>1.05</ShootingAccuracyPawn>
          <StaggerDurationFactor>0.95</StaggerDurationFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>NAT_SlowedByBile</defName>
    <label>slowed by bile</label>
    <description>Bile covers body and sticks to skin, making movement and manipulation much harder. Serpents' bile is fire-resistant and reacts with acid, causing severe burns. Continued exposure to tox gas results in toxic buildup and eventually death.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1</maxSeverity>
    <initialSeverity>0.001</initialSeverity>
    <everCurableByItem>false</everCurableByItem>
    <battleStateLabel>slowed by bile</battleStateLabel>
    <stages>
      <li>
        <label>slightly</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.9</setMax>
          </li>
        </capMods>
        <statOffsets>
          <MeleeCooldownFactor>0.1</MeleeCooldownFactor>
          <AimingDelayFactor>0.1</AimingDelayFactor>
        </statOffsets>
        <statFactors>
          <Flammability>0.9</Flammability>
        </statFactors>
        <damageFactors>
          <AcidBurn>1.1</AcidBurn>
        </damageFactors> 
      </li>
      <li>
        <label>moderately</label>
        <minSeverity>0.5</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.8</setMax>
          </li>
        </capMods>
        <statOffsets>
          <MeleeCooldownFactor>0.25</MeleeCooldownFactor>
          <AimingDelayFactor>0.25</AimingDelayFactor>
        </statOffsets>
        <statFactors>
          <Flammability>0.75</Flammability>
        </statFactors>
        <damageFactors>
          <AcidBurn>1.3</AcidBurn>
        </damageFactors> 
      </li>
      <li>
        <label>significantly</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.6</setMax>
          </li>
        </capMods>
        <statOffsets>
          <MeleeCooldownFactor>0.5</MeleeCooldownFactor>
          <AimingDelayFactor>0.5</AimingDelayFactor>
        </statOffsets>
        <statFactors>
          <Flammability>0.5</Flammability>
        </statFactors>
        <damageFactors>
          <AcidBurn>1.5</AcidBurn>
        </damageFactors> 
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-10</severityPerDay>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_PainQuenchSerum</defName>
    <label>pain quench</label>
    <hediffClass>NAT.Hediff_PainQuench</hediffClass>
    <description>This creature has the pain quench serum in their bloodstream. This substance makes it fully resistant to any pain source and additionally suppress induced pain.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_DisappearsDisableable">
        <disappearsAfterTicks>1200000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
    <stages>
      <li>
        <painFactor>0</painFactor>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_BilePowerSerum</defName>
    <label>bile power</label>
    <hediffClass>NAT.Hediff_PainQuench</hediffClass>
    <description>This creature has the bile power serum in their bloodstream. This substance makes it resistant to bile slowdown effect and additionally decreases acid damage.</description>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_DisappearsDisableable">
        <disappearsAfterTicks>300000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath" />
    </comps>
    <stages>
      <li>
        <statFactors>
          <Flammability>0.8</Flammability>
        </statFactors>
        <damageFactors>
          <AcidBurn>0.5</AcidBurn>
        </damageFactors>
        <foodPoisoningChanceFactor>0</foodPoisoningChanceFactor>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_InducedPain</defName>
    <label>induced pain</label>
    <description>A pain without any visible reason.</description>
    <initialSeverity>0.001</initialSeverity>
	<hediffClass>NAT.Hediff_InducedPain</hediffClass>
	<isBad>false</isBad>
    <maxSeverity>10</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>5000~15000</disappearsAfterTicks>
		<showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_RustedRegeneration</defName>
    <label>rusted regeneration</label>
    <description>Rusted regeneration.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <regeneration>40</regeneration>
		<minSeverity>0</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>70</regeneration>
		<minSeverity>0.3</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>95</regeneration>
		<minSeverity>0.5</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>120</regeneration>
		<minSeverity>0.7</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <regeneration>200</regeneration>
		<minSeverity>0.9</minSeverity>
		<becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>NAT_CollectorHypnosis</defName>
    <label>collector hypnosis</label>
    <description>An aftereffect of hypnosis by collector.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<isBad>false</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-12.00</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
	<givesInfectionPathways>
      <li>NAT_ByCollector</li>
    </givesInfectionPathways>
  </HediffDef>
  
  <InfectionPathwayDef>
    <defName>NAT_ByCollector</defName>
    <label>implanted by collector</label>
  </InfectionPathwayDef>

</Defs>