<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <ThingDef Name="NAT_ItemUsableByRust" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <genericMarketSellable>false</genericMarketSellable>
    <drawerType>MapMeshOnly</drawerType>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <scatterableOnMapGen>false</scatterableOnMapGen>
	<useHitPoints>true</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <soundInteract>Standard_Pickup</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>10</stackLimit>
    <intricate>true</intricate>
    <statBases>
      <Mass>0.1</Mass>
      <Beauty>-6</Beauty>
      <Flammability>1</Flammability>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>

  </ThingDef>

  <ThingDef Name="NAT_RustActivatorBase" Abstract="True" ParentName="NAT_ItemUsableByRust">
    <thingSetMakerTags>
      <li>NAT_RustedActivator</li>
    </thingSetMakerTags>
    <recipeMaker>
      <researchPrerequisite>NAT_RustedSoldiers</researchPrerequisite>
      <workAmount>700</workAmount>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <productCount>1</productCount>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <soundWorking>Recipe_Machining</soundWorking>
      <effectWorking>Cook</effectWorking>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>BioferriteShaper</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Bioferrite>20</Bioferrite>
    </costList>
  </ThingDef> 
  
  <ThingDef ParentName="NAT_RustActivatorBase">
    <defName>NAT_RustedActivator_Speed</defName>
    <label>rusted speed activator</label>
    <description>A small device that increases speed of rust.</description>
    <graphicData>
      <texPath>Things/Item/NAT_RustedActivator_Speed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>55</MarketValue>
    </statBases>
    <comps>
      <li Class="NAT.CompProperties_UsableByRust">
        <hediff>NAT_ActivatedSpeed</hediff>
        <useEffect>NAT_ActivatorUsed_Speed</useEffect>
      </li>
    </comps>
    <costList>
      <Neutroamine>5</Neutroamine>
    </costList>
  </ThingDef>

  <ThingDef ParentName="NAT_RustActivatorBase">
    <defName>NAT_RustedActivator_Durability</defName>
    <label>rusted durability activator</label>
    <description>A small device that increases durability of rust.</description>
    <graphicData>
      <texPath>Things/Item/NAT_RustedActivator_Durability</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>55</MarketValue>
    </statBases>
    <comps>
      <li Class="NAT.CompProperties_UsableByRust">
        <hediff>NAT_ActivatedDurability</hediff>
        <useEffect>NAT_ActivatorUsed_Durability</useEffect>
      </li>
    </comps>
    <costList>
      <Plasteel>10</Plasteel>
    </costList>
  </ThingDef>

  <ThingDef ParentName="NAT_RustActivatorBase">
    <defName>NAT_RustedActivator_Charge</defName>
    <label>rusted charge activator</label>
    <description>A small device that increases work speed of rust.</description>
    <graphicData>
      <texPath>Things/Item/NAT_RustedActivator_Charge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>35</MarketValue>
    </statBases>
    <comps>
      <li Class="NAT.CompProperties_UsableByRust">
        <hediff>NAT_ActivatedCharge</hediff>
        <useEffect>NAT_ActivatorUsed_Charge</useEffect>
        <restOffset>0.8</restOffset>
      </li>
    </comps>
    <costList>
      <Neutroamine>5</Neutroamine>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="NAT_RustActivatorBase">
    <defName>NAT_RustedActivator_Regeneration</defName>
    <label>rusted regeneration activator</label>
    <description>A small device that increases regeneration of rust.</description>
    <graphicData>
      <texPath>Things/Item/NAT_RustedActivator_Regeneration</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>45</MarketValue>
    </statBases>
    <comps>
      <li Class="NAT.CompProperties_UsableByRust">
        <hediff>NAT_ActivatedRegeneration</hediff>
        <useEffect>NAT_ActivatorUsed_Regeneration</useEffect>
      </li>
    </comps>
    <costList>
      <Meat_Twisted>40</Meat_Twisted>
    </costList>
  </ThingDef>
  
  <ThingDef ParentName="NAT_ItemUsableByRust">
    <defName>NAT_ShardUpgrader</defName>
    <label>shard upgrader</label>
    <description>Special device that can upgrade rust using shard of dark archotechnology.\n\nMakes rust core fully stable.</description>
    <graphicData>
      <texPath>Things/Item/NAT_ShardRustUpgrader</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>1250</MarketValue>
    </statBases>
    <comps>
      <li Class="NAT.CompProperties_UsableByRust">
        <hediff>NAT_ShardUpgrade</hediff>
        <destroyAfterUse>true</destroyAfterUse>
        <combatEnhancing>false</combatEnhancing>
      </li>
    </comps>
    <costList>
      <Shard>1</Shard>
	  <ComponentIndustrial>4</ComponentIndustrial>
      <Bioferrite>65</Bioferrite>
    </costList>
	<recipeMaker>
	  <workAmount>2100</workAmount>
    </recipeMaker>
	<stackLimit>1</stackLimit>
  </ThingDef>
  
  <HediffDef>
    <defName>NAT_ShardUpgrade</defName>
    <label>shard upgrade</label>
    <hediffClass>HediffWithComps</hediffClass>
    <description>This rusted soldier is upgraded using shard of dark archotechnology.</description>
    <isBad>false</isBad>
    <stages>
      <li>
		<statFactors>
          <IncomingDamageFactor>0.75</IncomingDamageFactor>
		  <Flammability>0.75</Flammability>
        </statFactors>
<statOffsets>
      <NAT_CoreDropChance>1</NAT_CoreDropChance>
        </statOffsets>
		<regeneration>15</regeneration>
      </li>
    </stages>
  </HediffDef>
  
</Defs>