      <li Class="NAT.CompProperties_AbilityReinforcements">
        <missRadius>2.9</missRadius>
        <kindDefs>
          <NAT_RustedTrooper>2</NAT_RustedTrooper>
        </kindDefs>
      </li>
      <li Class="NAT.CompProperties_AbilityRustedCommander">
        <cost>3</cost>
