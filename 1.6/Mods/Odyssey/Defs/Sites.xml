<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <SitePartDef>
    <defName>NAT_RustedOutpost_Orbit</defName>
    <label>rusted outpost</label>
    <description>You have detected the energy signature of a gravcore.\n\nBe careful - orbital locations are extremely dangerous. Ensure your gravship is fully enclosed with airtight walls and equip your colonists with vacsuits. Plan your return trip, as living in orbit for long periods is very difficult.</description>
    <tags>
      <li>NAT_RustedOutpost_Orbit</li>
    </tags>
    <mainPartAllThreatsLabel>Contains: Gravcore</mainPartAllThreatsLabel>
    <siteTexture>World/NAT_RustedCitadel_Orbit</siteTexture>
    <expandingIconTexture>World/NAT_RustedOutpost_Orbit</expandingIconTexture>
    <gravShipsCanLandOn>true</gravShipsCanLandOn>
    <wantsThreatPoints>true</wantsThreatPoints>
    <disallowsAutomaticDetectionTimerStart>true</disallowsAutomaticDetectionTimerStart>
    <leaveAbandonedSettlement>false</leaveAbandonedSettlement>
    <minMapSize>(300, 0, 300)</minMapSize>
    <considerEnteringAsAttack>false</considerEnteringAsAttack>
    <copyQuestName>true</copyQuestName>
  </SitePartDef>

  <GenStepDef>
    <defName>NAT_RustedOutpost_Orbit</defName>
    <linkWithSite>NAT_RustedOutpost_Orbit</linkWithSite>
    <order>399</order>
    <genStep Class="NAT.GenStep_RustedPlatform">
      <layout>NAT_RustedOutpost</layout>
      <minBaseSize>(30, 30)</minBaseSize>
      <maxBaseSize>(40, 40)</maxBaseSize>
      <platformCountRange>2~4</platformCountRange>
      <minPlatformSize>(5, 5)</minPlatformSize>
      <maxPlatformSize>(10, 10)</maxPlatformSize>
    </genStep>
  </GenStepDef>

