  <GenStepDef>
    <defName>NAT_RustedNode</defName>
    <linkWithSite>NAT_RustedNode</linkWithSite>
    <order>399</order>
    <genStep Class="NAT.GenStep_RustedNode">
      <floorChanceFromLayerCurve>
        <points>
          <li>(0, 0.85)</li>
          <li>(1, 0.65)</li>
          <li>(2, 0.25)</li>
          <li>(3, 0.1)</li>
        </points>
      </floorChanceFromLayerCurve>
      <mainPlatformPrefabs>
        <li>
          <prefab>NAT_RustedBeacon</prefab>
          <cost>200</cost>
          <weight>0.5</weight>
        </li>
        <li>
          <prefab>NAT_RustedTurretPost</prefab>
          <cost>50</cost>
          <weight>2</weight>
        </li>
        <li>
          <prefab>NAT_RustedAutoTurret</prefab>
          <cost>100</cost>
          <weight>1</weight>
        </li>
        <li>
          <prefab>NAT_RustedSniperTurret</prefab>
          <cost>200</cost>
          <weight>0.5</weight>
        </li>
      </mainPlatformPrefabs>
      <prefabs>
        <li>
          <prefab>NAT_RustedPallet</prefab>
          <cost>50</cost>
          <weight>1.5</weight>
        </li>
        <li>
          <prefab>NAT_RustedArmyBanner</prefab>
          <cost>0</cost>
          <weight>0.25</weight>
        </li>
        <li>
          <prefab>NAT_RustedTurretPost</prefab>
          <cost>70</cost>
          <weight>1</weight>
        </li>
        <li>
          <prefab>NAT_RustedBeacon</prefab>
          <cost>200</cost>
          <weight>0.5</weight>
        </li>
      </prefabs>
      <platformCountRange>3~5</platformCountRange>
      <mainPlatformSizeRange>30~40</mainPlatformSizeRange>
      <platformSizeRange>10~20</platformSizeRange>
      <fixedPoints>1500~2000</fixedPoints>
    </genStep>
  </GenStepDef> 
  
</Defs>