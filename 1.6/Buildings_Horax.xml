<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>NAT_HoraxStabilizer</defName>
    <label>dark archostabilizer</label>
    <description>A shield projecter that protects a nearby mechanoid relay. All stabilizers must be hacked or destroyed to deactivate the shield.\n\nDestroying a stabilizer will prompt a defensive response. Hacking is a slower but safer option.</description>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/MechanoidStabilizer/MechanoidStabilizer</texPath>
      <drawSize>(2, 2)</drawSize>
    </graphicData>
    <killedLeavingsRanges>
      <Bioferrite>10~25</Bioferrite>
      <NAT_PainClot>3~10</NAT_PainClot>
      <NAT_HoraxChunk>1~2</NAT_HoraxChunk>
    </killedLeavingsRanges>
    <size>(2, 2)</size>
    <tickerType>Normal</tickerType>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <passability>Impassable</passability>
    <pathCost>50</pathCost>
    <building>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
      <repairable>false</repairable>
      <roofCollapseDamageMultiplier>0.1</roofCollapseDamageMultiplier>
    </building>
    <placeWorkers>
      <li>PlaceWorker_InvalidOverSubstructure</li>
    </placeWorkers>
    <comps>
      <li Class="CompProperties_Hackable">
        <defence>30000</defence>
        <effectHacking>HackingTerminal</effectHacking>
        <lockoutDurationHoursRange>12~18</lockoutDurationHoursRange>
        <notHackedInspectString>Hack to disable stabilizer.</notHackedInspectString>
        <hackedInspectString>Deactivated.</hackedInspectString>
        <showProgressAfterHackCompletion>false</showProgressAfterHackCompletion>
        <hackedMessage>{HACKER_labelShort} has finished hacking {SUBJECT_labelNoParenthesisDef}.</hackedMessage>
        <unhackedGraphicData>
          <graphicClass>Graphic_Multi</graphicClass>
          <texPath>Things/Building/MechanoidStabilizer/MechanoidStabilizer</texPath>
          <drawSize>(2, 2)</drawSize>
        </unhackedGraphicData>
        <hackedGraphicData>
          <graphicClass>Graphic_Multi</graphicClass>
          <texPath>Things/Building/MechanoidStabilizer/MechanoidStabilizer_Off</texPath>
          <drawSize>(2, 2)</drawSize>
        </hackedGraphicData>
        <intellectualSkillPrerequisite>7</intellectualSkillPrerequisite>
      </li>
      <li Class="CompProperties_HackableEffecter">
        <effecterDef>MechStabilizerPulse</effecterDef>
      </li>
      <li Class="CompProperties_AmbientSound">
        <sound>MechanoidStabilizer_Ambient</sound>
        <disableOnHacked>true</disableOnHacked>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef Name="NAT_HoraxStructureBase" ParentName="BuildingBase" Abstract="True">
    <thingClass>NAT.Building_HoraxStructure</thingClass>
    <rotatable>false</rotatable>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/MechanoidRelay</texPath>
      <drawSize>(3.5, 3.5)</drawSize>
    </graphicData>
    <size>(3, 3)</size>
    <drawerType>RealtimeOnly</drawerType>
    <useHitPoints>false</useHitPoints>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <passability>Impassable</passability>
    <pathCost>50</pathCost>
    <tickerType>Normal</tickerType>
    <building>
      <deconstructible>false</deconstructible>
      <repairable>false</repairable>
      <isTargetable>false</isTargetable>
      <isInert>true</isInert>
      <claimable>false</claimable>
      <expandHomeArea>false</expandHomeArea>
    </building>
    <placeWorkers>
      <li>PlaceWorker_InvalidOverSubstructure</li>
    </placeWorkers>
    <comps>
      <li Class="NAT.CompProperties_HoraxStructure">
        <activeInspectString>Hack or destroy relay stabilizers to obtain gravcore.</activeInspectString>
        <destabilizationMessage>The mechanoid relay has begun to destabilize.</destabilizationMessage>
        <crashedLetterLabel>Relay crash</crashedLetterLabel>
        <crashedLetterText>The mechanoid relay has crashed to the ground. Destroy it to obtain a gravcore.\n\nBe warned, hostile mechanoids will soon arrive in response to the relay going offline.</crashedLetterText>
        <destabilizationInspectString>Destabilizing</destabilizationInspectString>
        <crashedThingDef>MechRelay_Crashed</crashedThingDef>
      </li>
      <li Class="CompProperties_AmbientSound">
        <sound>MechanoidRelay_Ambient</sound>
      </li>
    </comps>
  </ThingDef>

